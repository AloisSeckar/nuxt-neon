{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,

		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"isolatedModules": true,
		"useDefineForClassFields": true,

		"baseUrl": ".",
		"types": ["vite/client", "vitepress/client"]
	},
	"include": [
		".vitepress/**/*.ts",
		".vitepress/**/*.vue",
		"**/*.ts",
		"**/*.tsx",
		"**/*.vue",
		"**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		".vitepress/cache",
		".vitepress/dist",
		"dist"
	]
}
